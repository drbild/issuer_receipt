<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg
   xmlns:dc="http://purl.org/dc/elements/1.1/"
   xmlns:cc="http://creativecommons.org/ns#"
   xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
   xmlns:svg="http://www.w3.org/2000/svg"
   xmlns="http://www.w3.org/2000/svg"
   width="100mm"
   height="62mm"
   version="1.1">

  <svg x="50mm" y="13mm">
    <g transform="scale({{ qr_code_scale }})">
      {{ qr_code }}
    </g>
  </svg>

  <text x="4mm" y="7mm" style="font-size: 10pt; font-family: Arial">
    Xaptum Group Identifier
  </text>
  <text x="4mm" y="11mm" text-align="middle" style="font-size: 6.7pt; font-family: Courier">
    {{ group_id }}
  </text>

  <text x="4mm" y="21mm" style="font-size: 10pt; font-family: Arial">
    Device Count
  </text>
  <text x="4mm" y="26mm" style="font-size: 10pt; font-family: Courier">
    {{ group_size }}
  </text>

  <text x="4mm" y="36mm" style="font-size: 10pt; font-family: Arial">
    Provisioned By
  </text>
  <text x="4mm" y="41mm" style="font-size: 10pt; font-family: Courier">
    {{ operator }}
  </text>

  <text x="4mm" y="51mm" style="font-size: 10pt; font-family: Arial">
    Provisioned At
  </text>
  <text x="4mm" y="56mm" style="font-size: 10pt; font-family: Courier">
    {{ timestamp }}
  </text>

</svg>
